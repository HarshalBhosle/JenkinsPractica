//scripted
node {
    stage('Checkout') {
        checkout scm
    }
    stage('Install Dependencies') {
        sh 'npm install'
    }
    stage('Build') {
        sh 'npm run build'
    }
    stage('Deploy') {
        sh 'pm2 start app.js'
    }
}

